      "label": "编译测试 test:build"
    },
    {
      "type": "shell",
      "command": "yarn webpack --watch --config ./webpack/webpack.test.js --progress",
      "group": "test",
      "problemMatcher": [],
      "label": "监视测试 test:watch"
    },
    {
      "type": "shell",
      "command": "rm -r ./node_modules/.cache/webpack/",
      "label": "清除打包缓存 cache:clean",
      "problemMatcher": []
    },
    {
      "type": "shell",
      "command": "rm -r ./node_modules/.cache/",
      "label": "清除全部缓存 cache:clear all",
