  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "yarn webpack --config ./webpack/webpack.dev.js --progress",
      "group": "build",
      "problemMatcher": [],
      "label": "编译开发版 dev:build"
    },
    {
      "type": "shell",
      "command": "yarn webpack --watch --config ./webpack/webpack.dev.js --progress",
      "group": "build",
      "problemMatcher": [],
      "label": "监视开发版 dev:watch"
    },
    {
      "type": "shell",
      "command": "yarn serve dist",
      "group": "build",
      "problemMatcher": [],
      "label": "启动服务器(本体) dev:serve"
    },
    {
      "type": "shell",
      "command": "yarn serve registry/dist",
      "group": "build",
      "problemMatcher": [],
      "label": "启动服务器(组件) dev:serve components"
    },
    {
      "type": "shell",
      "command": "yarn webpack --watch --config ./registry/webpack/components.js --progress",
      "group": "build",
      "problemMatcher": [],
      "label": "监视组件 dev:components"
    },
    {
      "type": "shell",
      "command": "yarn webpack --watch --config ./registry/webpack/plugins.js --progress",
      "group": "build",
      "problemMatcher": [],
      "label": "监视插件 dev:plugins"
    },
    {
      "type": "shell",
      "command": "yarn tsc -p ./tsconfig.types.json --watch",
      "group": "build",
      "problemMatcher": [],
      "label": "监视类型定义 dev:typings"
    },
